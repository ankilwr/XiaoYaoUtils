<resources>

    <style name="AppTheme.ActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/actionBarColor</item>
        <item name="colorPrimaryDark">@color/actionBarColor</item>
        <item name="colorAccent">@color/themeColor</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="actionBarStyle">@style/ActionbarStyle</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/actionBarColor</item>
        <item name="colorPrimaryDark">@color/actionBarColor</item>
        <item name="colorAccent">@color/themeColor</item>
        <item name="android:windowBackground">@color/windowBackground</item>
    </style>

    <style name="BlackStatus.ActionBar" parent="AppTheme.ActionBar">
        <item name="android:windowLightStatusBar">true</item>
    </style>
    <style name="BlackStatus.NoActionBar" parent="AppTheme.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
    </style>

</resources>
